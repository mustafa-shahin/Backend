@page "/users"
@attribute [Authorize(Roles = "Admin,Dev")]

<PageTitle>Users - CMS Dashboard</PageTitle>

<div class="space-y-6">
    <!-- Header -->
    <div class="md:flex md:items-center md:justify-between">
        <div class="flex-1 min-w-0">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 dark:text-white sm:text-3xl sm:truncate">
                <i class="fas fa-users mr-3"></i>
                User Management
            </h2>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                Manage user accounts, roles, and permissions
            </p>
        </div>
        <div class="mt-4 flex md:mt-0 md:ml-4">
            <button type="button"
                    class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                <i class="fas fa-plus mr-2"></i>
                Add User
            </button>
        </div>
    </div>

    <!-- Coming Soon Card -->
    <div class="bg-white dark:bg-gray-800 overflow-hidden shadow-sm rounded-lg border border-gray-200 dark:border-gray-700">
        <div class="px-6 py-12 text-center">
            <i class="fas fa-users text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">User Management</h3>
            <p class="text-gray-500 dark:text-gray-400 mb-6 max-w-sm mx-auto">
                User management interface will be implemented here. This will include user creation, editing, role assignment, and permission management.
            </p>
            <div class="flex justify-center space-x-4">
                <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                    <i class="fas fa-check text-green-500 mr-2"></i>
                    User Authentication
                </div>
                <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                    <i class="fas fa-check text-green-500 mr-2"></i>
                    Role-Based Access
                </div>
                <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                    <i class="fas fa-clock text-yellow-500 mr-2"></i>
                    User Management UI
                </div>
            </div>
        </div>
    </div>
</div>