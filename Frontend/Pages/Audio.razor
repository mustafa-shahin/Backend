@page "/media/audio"
@using Backend.CMS.Domain.Enums

<PageTitle>Audio - Media Library</PageTitle>

<FileManagementBase TargetFileType="FileType.Audio"
                    FileTypeName="Audio"
                    PageTitle="Audio Files"
                    PageDescription="Manage your audio files"
                    FileTypeValidator="@IsAudioFile"
                    DefaultPageSize="20" />

@code {
    private bool IsAudioFile(string contentType)
    {
        return contentType.StartsWith("audio/");
    }
}