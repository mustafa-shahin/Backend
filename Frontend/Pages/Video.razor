@page "/media/videos"
@using Backend.CMS.Domain.Enums

<PageTitle>Videos - Media Library</PageTitle>

<FileManagementBase TargetFileType="FileType.Video"
                    FileTypeName="Videos"
                    PageTitle="Videos"
                    PageDescription="Manage your video files"
                    FileTypeValidator="@IsVideoFile"
                    DefaultPageSize="20" />

@code {
    private bool IsVideoFile(string contentType)
    {
        return contentType.StartsWith("video/");
    }
}