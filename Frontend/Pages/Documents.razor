@page "/media/documents"
@using Backend.CMS.Domain.Enums

<PageTitle>Documents - Media Library</PageTitle>

<FileManagementBase TargetFileType="FileType.Document"
                    FileTypeName="Documents"
                    PageTitle="Documents"
                    PageDescription="Manage your document files"
                    FileTypeValidator="@IsDocumentFile"
                    DefaultPageSize="20" />

@code {
    private bool IsDocumentFile(string contentType)
    {
        return contentType.Contains("pdf") ||
               contentType.Contains("word") ||
               contentType.Contains("excel") ||
               contentType.Contains("powerpoint") ||
               contentType.Contains("text") ||
               contentType.Contains("document") ||
               contentType.Contains("application/");
    }
}