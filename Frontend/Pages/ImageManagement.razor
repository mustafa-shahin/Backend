@page "/media/pictures"
@using Backend.CMS.Domain.Enums

<PageTitle>Pictures - Media Library</PageTitle>

<FileManagementBase TargetFileType="FileType.Image"
                    FileTypeName="Pictures"
                    PageTitle="Pictures"
                    PageDescription="Manage your image collection"
                    FileTypeValidator="@IsImageFile"
                    DefaultPageSize="24" />

@code {
    private bool IsImageFile(string contentType)
    {
        return contentType.StartsWith("image/");
    }
}